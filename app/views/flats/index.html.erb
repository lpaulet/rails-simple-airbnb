<h1>All our flats (4)</h1>
  <div class="d-flex">
  <% @flats.each do |flat| %>
    <div class="card-body border m-3 p-0 rounded">
      <img src="https://source.unsplash.com/random" class="card-img-top" alt="image">
      <div class="card-body">
        <h5 class="card-title p-1"><%= flat.name %></h5>
        <p class="card-description p-1"><%= flat.description %></p>
        <p class="card-address p-1"><%= flat.address %></p>
        <div class="d-flex">
        <p class="card-price p-1"><%= flat.price_per_night %><i class="fas fa-euro-sign"></i></p>
        <p class="card-guests p-1"><%= flat.number_of_guests %><i class="fas fa-user-friends"></i></p>
        </div>
        <div class="d-flex">
        <a href="#" class="btn btn-outline-secondary" = >More info</a>
        <a href="#" class="btn btn-outline-secondary" >Edit</a>
        <a href="#" class="btn btn-outline-secondary" >Remove</a>
        </div>
      </div>
    </div>
  <% end %>
  </div>
